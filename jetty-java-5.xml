<?xml version="1.0" encoding="UTF-8"?>
<project default="jetty-java-5-deploy" name="jetty-java-5">
	<import file="lib/deploy.xml" />

	<!-- JAXB is not included in Java 5 JREs so we have to add it -->
	<target name="deploy-java-5-libs">
		<copy todir="../jetty/lib/ext/">
			<fileset dir="../sierra-message/jaxb">
			</fileset>
		</copy>
	</target>

	<target name="undeploy-java-5-libs">
		<!-- TODO -->
	</target>

	<target name="jetty-java-5-deploy" depends="deploy-app,deploy-java-5-libs" />
	<target name="jetty-java-5-undeploy" depends="undeploy-app,undeploy-java-5-libs" />
</project>