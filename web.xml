<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<welcome-file-list>
		<welcome-file>SierraPortal.html</welcome-file>
	</welcome-file-list>

	<icon>
		<small-icon>images/sierra_logo.gif</small-icon>
	</icon>

	<!-- Set up logging and boot the schema -->

	<listener>
		<listener-class>
			com.surelogic.sierra.server.lifecycle.BootUpServletContextListener
		</listener-class>
	</listener>

	<context-param>
		<param-name>SLLogger</param-name>
		<param-value>Use Sierra Directory</param-value>
		<param-name>SLLoggerTag</param-name>
		<param-value>team-server</param-value>
	</context-param>

	<!--  GWT browser to server communication -->

	<servlet>
		<servlet-name>Server Login</servlet-name>
		<servlet-class>
			com.surelogic.sierra.jdbc.server.UserLoginServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Server Login</servlet-name>
		<url-pattern>/rpc/login</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>Session Service</servlet-name>
		<servlet-class>
			com.surelogic.sierra.gwt.server.SessionServiceImpl
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Session Service</servlet-name>
		<url-pattern>/rpc/SessionService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Manage Server</servlet-name>
		<servlet-class>
			com.surelogic.sierra.gwt.server.ManageServerServiceImpl
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Manage Server</servlet-name>
		<url-pattern>/rpc/ManageServerService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Manage User</servlet-name>
		<servlet-class>
			com.surelogic.sierra.gwt.server.ManageUserAdminServiceImpl
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Manage User</servlet-name>
		<url-pattern>/rpc/ManageUserService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Overview</servlet-name>
		<servlet-class>
			com.surelogic.sierra.gwt.server.OverviewServiceImpl
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Overview</servlet-name>
		<url-pattern>/rpc/OverviewService</url-pattern>
	</servlet-mapping>

	<!-- chart servlets -->

	<servlet>
		<servlet-name>LatestScanResults</servlet-name>
		<servlet-class>
			com.surelogic.sierra.servlets.chart.SierraChartServlet
		</servlet-class>
		<init-param>
			<param-name>plot-class</param-name>
			<param-value>
				com.surelogic.sierra.chart.LatestScanResults
			</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>LatestScanResults</servlet-name>
		<url-pattern>/chart/LatestScanResults</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AuditContributions</servlet-name>
		<servlet-class>
			com.surelogic.sierra.servlets.chart.SierraChartServlet
		</servlet-class>
		<init-param>
			<param-name>plot-class</param-name>
			<param-value>
				com.surelogic.sierra.chart.AuditContributions
			</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>AuditContributions</servlet-name>
		<url-pattern>/chart/AuditContributions</url-pattern>
	</servlet-mapping>


	<filter>
		<description>
			Validates that requests from Sierra Clients are correctly
			authenticated.
		</description>
		<filter-name>Security Filter</filter-name>
		<filter-class>
			com.surelogic.sierra.jdbc.server.BasicSecurityFilter
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>Security Filter</filter-name>
		<url-pattern>/services/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>Sierra Service</servlet-name>
		<servlet-class>
			com.surelogic.sierra.tool.message.SierraServiceImpl
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Sierra Service</servlet-name>
		<url-pattern>/services/SierraService</url-pattern>
	</servlet-mapping>

</web-app>