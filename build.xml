<?xml version="1.0" encoding="UTF-8"?>
<project name="headlessBuilder" default="schema" basedir=".">

	<property name="sierra.db.user" value="sierra" />
	<property name="sierra.db.pass" value="sierra" />
	<property name="sierra.db.location" value="//localhost:1527/SIERRA" />

	<target name="schema">
		<echo message="here: ${user.dir}" />
		<taskdef name="schemaTask"
			classname="com.surelogic.sierra.ant.DeploySchemaTask">
			<classpath>
				<pathelement path="${user.dir}/bin/" />
				<pathelement location="${user.dir}/derbyclient.jar" />
				<pathelement path="${user.dir}/../common/bin" />
			</classpath>
		</taskdef>

		<schemaTask />
	</target>

</project>