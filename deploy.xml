<?xml version="1.0" encoding="UTF-8"?>
<project default="deploy-app" name="server-deployment" >
	<description>Jetty web deployment file</description>
	<target name="deploy-app">
		<jar destfile="../jetty/lib/ext/common.jar" basedir="../common/bin"></jar>
		<jar destfile="WebRoot/WEB-INF/lib/common.jar" basedir="../common/bin"></jar>
		<jar destfile="WebRoot/WEB-INF/lib/sierra-jdbc.jar" basedir="../sierra-jdbc/bin"></jar>
		<jar destfile="WebRoot/WEB-INF/lib/sierra-message.jar" basedir="../sierra-message/bin"></jar>
		<war destfile="../jetty/webapps/sierra-services.war" basedir="WebRoot" webxml="WebRoot/WEB-INF/web.xml"></war>
	</target>
</project>